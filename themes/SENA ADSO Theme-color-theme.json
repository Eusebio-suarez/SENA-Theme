{
	"name": "SENA ADSO Theme",
	"colors": {
		"editor.background": "#161d1a",
		"editor.foreground": "#eeffff",
		"activityBarBadge.background": "#39a900",


		// Barra de actividad (lado izquierdo)
		"activityBar.background": "#161d1a",

		//color de los iconos laterales
		"activityBar.foreground": "#39a900",
		"activityBar.activeBorder":"#10758e",
		"activityBarBadge.foreground": "#ffffff",

		// Barra de estado (inferior)
		"statusBar.background": "#2a3a2b",
		"statusBar.foreground": "#ffffff",
		"statusBar.debuggingBackground": "#39a900",
		"statusBar.noFolderBackground": "#29690b",

		// Barra lateral (sidebar)
		"sideBar.background": "#1a211e",
		"sideBar.foreground": "#bbbbbb",
		"sideBarTitle.foreground": "#bbbbbb",
		"sideBarSectionHeader.background": "#161d1a",
		"sideBarSectionHeader.foreground": "#39a900",

		 // Barra de t√≠tulo (superior)
		"titleBar.activeBackground": "#2a3a2b",
		"titleBar.activeForeground": "#ffffff",
		"titleBar.inactiveBackground": "#1a1c21",
		"titleBar.inactiveForeground": "#bbbbbb",

		//n√∫mero de linea
		"editorLineNumber.foreground": "#4d5a52",
		"editorLineNumber.activeForeground": "#39a900",

		// Bracket pair color matching
  		"editorBracketMatch.background": "#01b40133",
  		"editorBracketMatch.border": "#39a900",

		// Errores y advertencias
		"editorError.foreground": "#ff5f56",
		"editorWarning.foreground": "#facc15",
		"editorInfo.foreground": "#01b401",

		// Scrollbar
		"scrollbarSlider.background": "#01b40133",
		"scrollbarSlider.hoverBackground": "#01b40166",
		"scrollbarSlider.activeBackground": "#01b40166",

		// Pesta√±as del editor
		"tab.activeBackground": "#161d17",
		"tab.activeForeground": "#eeffff",
		"tab.inactiveBackground": "#1a211e",
		"tab.inactiveForeground": "#bbbbbb",

		// ===== B√∫squeda =====
		"editor.findMatchBackground": "#39a90066",
		"editor.findMatchHighlightBackground": "#39a90033",
		"editor.findRangeHighlightBackground": "#39a90022",

		// ===== Minimap =====
		"minimap.findMatchHighlight": "#39a90088",
		"minimap.selectionHighlight": "#39a90055",
		"minimap.selectionOccurrenceHighlight": "#39a90044",

		// ===== Listas / Navegaci√≥n lateral =====
		"list.activeSelectionBackground": "#39a90055",
		"list.activeSelectionForeground": "#ffffff",
		"list.highlightForeground": "#39a900",
		"list.hoverBackground": "#39a90022",

		// === MEN√öS Y DROPDOWNS ===
		"menu.background": "#111a14",
		"menu.foreground": "#c5d4c7",
		"menu.selectionBackground": "#39a90025",
		"menu.selectionForeground": "#39a900",
		"menu.border": "#1a251d",
		
		// === BOTONES ===
		"button.background": "#0a93b0",
		"button.foreground": "#ffffff",
		"button.hoverBackground": "#0a93b0",
	},
	
	"tokenColors": [
		// Comentarios: para todo lo que est√© despu√©s de "//" o entre "/* ... */"
		{
			"scope": ["comment"],
			"settings": {
			"foreground": "#5c7554", 
			"fontStyle": "italic bold"
			}
		},

		// Strings: texto entre comillas ("hola", 'mundo', etc.)
		{
			"scope": ["string"],
			"settings": {
			"foreground": "#4caf50" 
			}
		},

		// Keywords: if, else, class, return, function, etc.
		{
			"scope": ["keyword", "storage.type"],
			"settings": {
			"foreground": "#7ad053", 
			"fontStyle": "" 
			}
		},

		// Variables: nombres como edad, total, userName, etc.
		{
			"scope": ["variable", "meta.definition.variable.name"],
			"settings": {
			"foreground": "#f5b37c" 
			}
		},

		// Funciones: nombres de funciones definidas por el usuario
		{
			"scope": ["entity.name.function", "support.function"],
			"settings": {
			"foreground": "#6bbd6e" 
			}
		},

		// Constantes num√©ricas: n√∫meros como 5, 3.14, -7, etc.
		{
			"scope": ["constant.numeric"],
			"settings": {
			"foreground": "#0a93b0" 
			}
		},

		// Tipos y clases: nombres de clases, tipos como String, Boolean, etc.
		{
			"scope": ["entity.name.type", "support.class"],
			"settings": {
			"foreground": "#76b668" 
			}
		},

		// Par√©ntesis y s√≠mbolos
		{
			"scope": ["punctuation", "meta.brace", "meta.delimiter"],
			"settings": {
			"foreground": "#0a93b0" //para s√≠mbolos como (), {}, []
			}
		},


		// Etiquetas HTML como <div>, <p>, <a>, etc.
		{
			"scope": ["entity.name.tag.html"],
			"settings": {
			"foreground": "#7ad053"     
			}
		},

		// Atributos de HTML como href, src, class, id, etc.
		{
			"scope": ["entity.other.attribute-name.html"],
			"settings": {
			"foreground": "#53d0b9",     
			"fontStyle": "" 
			}
		},

		// Valores de los atributos HTML como "https://...", "#", "button", etc.
		{
			"scope": ["string.quoted.double.html", "string.quoted.single.html"],
			"settings": {
			"foreground": "#f5b37c",    
			"fontStyle": ""              // Sin estilo
			}
		},

		// Comentarios en HTML: <!-- Esto es un comentario -->
		{
			"scope": ["comment.block.html"],
			"settings": {
			"foreground": "#5c7554",
			"fontStyle": "italic"
			}
		},

		// Doctype y otros metadatos como <!DOCTYPE html>
		{
			"scope": ["meta.tag.sgml.doctype.html"],
			"settings": {
			"foreground": "#af4c95",     
			"fontStyle": "bold"
			}
		},

		//css
		{
			"scope": [
			"support.type.property-name.css",
			"support.type.property-name.scss"
			],
			"settings": {
			"foreground": "#0a93b0",  
			"fontStyle": "italic"
			}
		},

		// üéØ Valores CSS y unidades
		{
			"scope": [
			"constant.numeric.css",
			"constant.other.color.rgb-value.css",
			"constant.other.unit.css",
			"keyword.other.unit.css"
			],
			"settings": {
			"foreground": "#f5b37c"
			}
		},

		// üé® Colores como red, green, blue, etc.
		{
			"scope": [
			"constant.other.color.css"
			],
			"settings": {
			"foreground": "#33aa67"
			}
		},

		// üß© Selectores (clases, IDs, etiquetas)
		{
			"scope": [
			"entity.other.attribute-name.id.css",      // #id
			"entity.other.attribute-name.class.css",   // .clase
			"entity.name.tag.css"                      // etiquetas (body, h1...)
			],
			"settings": {
			"foreground": "#7ad053", 
			"fontStyle": "bold"
			}
		},

		// ‚ú® Pseudoclases (:hover, :focus)
		{
			"scope": [
			"entity.other.pseudo-class.css",
			"entity.other.pseudo-element.css"
			],
			"settings": {
			"foreground": "#72c26b",  // Verde pastel
			"fontStyle": "italic"
			}
		},

		// ‚öôÔ∏è Funciones CSS (rgba, var, calc...)
		{
			"scope": [
			"support.function.misc.css"
			],
			"settings": {
			"foreground": "#56a355"
			}
		},

		// üîÅ Variables CSS personalizadas (--nombre)
		{
			"scope": [
			"variable.other.custom-property.css"
			],
			"settings": {
			"foreground": "#b5e0a7",  // Verde claro
			"fontStyle": "italic"
			}
		},
		{

		//java	
		// Modificadores de acceso (public, private, protected) y otros como static, final
		"scope": [
			"storage.modifier.java",
			"storage.modifier.ts",
			"storage.modifier.kotlin",
			"storage.modifier"
			],
			"settings": {
			"foreground": "#0a93b0",    
			"fontStyle": "bold"         
			}
		},

		// Palabras clave como class, interface, extends, implements
		{
			"scope": [
			"keyword.declaration.class",
			"keyword.declaration.interface",
			"keyword.control",
			"keyword.other"
			],
			"settings": {
			"foreground": "#0caece",
			"fontStyle": "bold"
			}
		}

	]
}
